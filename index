<body>
  <h2>Em ch·ªçn m√≥n n√†o ngon h∆°n? üçΩÔ∏è</h2>
  <div class="choices" id="choices"></div>
  <h3 id="result"></h3>

  <script>
    // Danh s√°ch m√≥n ƒÉn (t√™n + link ·∫£nh)
    const foods = [
      {name: "Pizza", img: "https://i.ibb.co/r22fS9K/pizza.jpg"},
      {name: "Sushi", img: "https://i.ibb.co/hMWnt7b/sushi.jpg"},
      {name: "L·∫©u", img: "https://i.ibb.co/yQtXZxH/hotpot.jpg"},
      {name: "B√∫n ch·∫£", img: "https://i.ibb.co/sCPbznT/bun-cha.jpg"},
      {name: "Hamburger", img: "https://i.ibb.co/cC2cwBS/burger.jpg"},
      {name: "Taco", img: "https://i.ibb.co/1nnKkfc/taco.jpg"},
      {name: "C∆°m t·∫•m", img: "https://i.ibb.co/3CnbvLq/com-tam.jpg"}
    ];
    
    let currentIndex = 1;
    let currentWinner = foods[0];

    function showChoices() {
      if (currentIndex >= foods.length) {
        document.getElementById("choices").innerHTML = "";
        document.getElementById("result").innerText = 
          "üéâ M√≥n em ch·ªçn cu·ªëi c√πng l√†: " + currentWinner.name + " üéâ";
        return;
      }

      const challenger = foods[currentIndex];
      const choicesDiv = document.getElementById("choices");
      choicesDiv.innerHTML = `
        <div class="choice" onclick="pick('${currentWinner.name}')">
          <img src="${currentWinner.img}" alt="${currentWinner.name}">
        </div>
        <div class="choice" onclick="pick('${challenger.name}')">
          <img src="${challenger.img}" alt="${challenger.name}">
        </div>
      `;
    }

    function pick(choiceName) {
      // t√¨m object theo t√™n
      currentWinner = foods.find(f => f.name === choiceName);
      currentIndex++;
      showChoices();
    }

    showChoices();
  </script>
